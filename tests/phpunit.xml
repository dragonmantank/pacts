<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="./bootstrap.php"
    colors="true">

    <testsuite name="Pact Library Tests">
        <directory>./lib</directory>
    </testsuite>

    <filter>
        <whitelist>
            <directory suffix=".php">../admin/application</directory>
            <directory suffix=".php">../lib/Pacts</directory>
            <exclude>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html"
            target="./log/report"
            charset="UTF-8"
            yui="true"
            highlight="true"
            lowUpperBound="50"
            highLowerBound="80" />
        <log type="testdox-html" target="./log/testdox.html" />
    </logging>
</phpunit>